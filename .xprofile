#!/bin/bash

# ----| Vars | ----

# -- Laptop --
export LAPTOP='eDP1'
export LAPTOP_WIDTH=1920
export LAPTOP_HEIGHT=1080

# -- Monitor --
export MONITOR='HDMI1'
export MONITOR_WIDTH=1920
export MONITOR_HEIGHT=1080

export PATH=$HOME/.local/bin:/usr/local/bin:$HOME/.cargo/bin:$PATH
export QT_STYLE_OVERRIDE=kvantum
export DENO_INSTALL="/home/kaisererwin/.deno"
export STARSHIP_CONFIG="$HOME/.config/fish/starship.toml"
export EDITOR="nvim"

# ----| Display |----
hdmi=`xrandr | grep ' connected' | grep 'HDMI' | awk '{print $1}'`

if [ "$hdmi" = "HDMI1" ]; then
  xrandr --output "$MONITOR" -r 75.0 --primary --mode 1920x1080 --rotate normal --right-of eDP1 \
     --output "$LAPTOP" --mode 1920x1080 --rotate normal
else
  xrandr --output eDP1 --primary --mode 1920x1080 --rotate normal
fi

lxsession &
cpupower-gui &
nitrogen --restore &
udiskie -t &
nm-applet &
blueman-adapters &
picom &
battery &
# volumeicon &
redshift -O 5000 &
